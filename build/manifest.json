{
  "manifest_version": 3,
  "name": "LG New Tab",
  "short_name": "LG Tab",
  "version": "1.0",
  "description": "A Liquid Galaxy New Tab Extension for Microsoft Edge.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "logo192.png",
      "128": "logo512.png"
    }
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["http://*/", "https://*/"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  }
}
